<!-- BOOTSTRAP ROW -->

<div class="row">

  <!-- MAIN COLUMN -->

  <div class="col-8 offset-2">

    <!-- LOGO -->

    <br>
    <h1 class="text-light text-center">deliverApp</h1>
    <br>

    <!-- INSTRUCTIONS -->

    <h3 class="text-light text-center">Sign In</h3>
    <br>

    <form class="clearfix mb-4">
      <!-- EMAIL FIELD -->

      <div class="form-group">
        <input type="text" id="correo" class="form-control" aria-describedby="example-text" placeholder="Email">
      </div>

      <!-- PASSWORD FIELD -->

      <div class="form-group">
        <input type="password" id="password" class="form-control" aria-describedby="example-text" placeholder="Password">
      </div>

    </form>

    <!-- SUBMIT BUTTON -->

    <div class="text-center">
      <button id="login" class="btn btn-success font-weight-bold">Send</button>
    </div>

  </div>

</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="../public/login/bundle.js"></script>

<script>
  $("#login").click(function () {
    localStorage.clear();
    var userinfo = 1;
    localStorage.setItem('deliveringUserId', JSON.stringify(userinfo));
    alert("Welcome to deliverApp");
    window.location.href = "/role";
  });
</script>